<TelaPrincipal>:
    MDBoxLayout:
        orientation: 'vertical'
        listaValores: spMoeda.values
        mensagem: spMoeda.text
        MDLabel:
            text: "Conversor de Moedas - 2022"
            halign: "center"
            font_style: 'H5'
            theme_text_color: "Custom"
            text_color: '#3C0059'
        MDLabel:
            text: "Desenvolvido Claudio Lopes"
            halign: "center"
            font_style: 'Subtitle2'
            theme_text_color: "Custom"
            text_color: '#550080'
        MDBoxLayout:
            orientation: 'horizontal'
            MDLabel:
                text: "Selecione uma moeda"
                halign: "center"
                font_style: 'Subtitle2'
                theme_text_color: "Custom"
                text_color: '#550080'
            Spinner:
                id: spMoeda
                text: root.valorInicial
                values: root.listaValores
                size_hint: None, None
                size: dp(146), dp(46)
                pos_hint: {'center_x': .5, 'center_y': .5}
                on_text: root.mensagem = self.text
                on_press: root.limpa_campos()
        MDBoxLayout:
            orientation: 'vertical'
            MDRaisedButton:
                text: "Mostrar Cotação"
                pos_hint: {'center_x': .5, 'center_y': .5}
                on_press: root.mostra_cotacao()
            MDLabel:
                id: moeda1
                text: "Cotação do momento"
                halign: "center"
                font_style: 'Subtitle2'
                theme_text_color: "Custom"
                text_color: '#550080'
        MDBoxLayout:
            padding: "10dp"
            orientation: 'horizontal'
            MDLabel:
                text: "Quanto quer converter em R$"
                halign: "center"
                font_style: 'Subtitle2'
                theme_text_color: "Custom"
                text_color: '#550080'
            MDTextField:
                id: txt_real
                hint_text: 'R$'
                pos_hint: {'center_x': .5, 'center_y': .5}
                size_hint_x: .8
                theme_text_color: "Custom"
                max_text_length: 13
                text_color: 0, 0, 1, 1
        MDBoxLayout:
            orientation: 'vertical'
            MDRaisedButton:
                id:btn_calcular
                text: "Calcular Troca"
                pos_hint: {'center_x': .5, 'center_y': .5}
                on_press: root.trocar_moeda()
            MDLabel:
                id: lbl_resultado
                text: "Resultado"
                halign: "center"
                font_style: 'Subtitle2'
                theme_text_color: "Custom"
                text_color: '#190899'